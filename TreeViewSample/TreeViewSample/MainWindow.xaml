<Window x:Class="TreeViewSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeViewSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        GotFocus="OnGotFocus" 
       >
    <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" d:DataContext="{d:DesignInstance local:ViewModel}">
        <local:MainTreeView x:Name="TreeViewControl"/>
    </ScrollViewer>
</Window>
